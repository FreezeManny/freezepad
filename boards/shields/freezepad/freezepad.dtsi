#include <dt-bindings/zmk/matrix_transform.h>
#include "freezepad-layouts.dtsi"
&physical_layout0 {
    transform = <&default_transform>;
};

// Keyscan Setup
/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,physical-layout = &physical_layout0;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <20>;
        rows = <1>;

// | SW00 | SW01 | SW02 | SW03 |
// | SW10 | SW11 | SW12 | SW13 |
// | SW20 | SW21 | SW22 | SW23 |
// | SW30 | SW31 | SW32 | SW33 |
// | SW40 | SW41 | SW42 | SW43 |

        map = <
            RC(0,0)  RC(0,1)  RC(0,2)  RC(0,3)
            RC(0,4)  RC(0,5)  RC(0,6)  RC(0,7)
            RC(0,8)  RC(0,9)  RC(0,10) RC(0,11)
            RC(0,12) RC(0,13) RC(0,14) RC(0,15)
            RC(0,16) RC(0,17) RC(0,18) RC(0,19)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-direct";
        label = "KSCAN";
        wakeup-source;
        input-gpios =
            <&gpio0 29 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>, //SW00
            <&gpio0 20 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>, //SW01
            <&gpio0 31 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>, //SW02
            <&gpio0 17 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>, //SW03
            <&gpio0 8  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>, //SW04
            <&gpio0 6  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>, //SW05

            <&gpio0 22 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>, //SW10
            <&gpio0 2  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>, //SW11
            <&gpio0 24 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>, //SW12
            <&gpio1 15 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>, //SW13
            <&gpio1 0  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>, //SW14
            <&gpio1 13 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>, //SW15

            <&gpio1 6  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>, //SW20
            <&gpio0 9  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>, //SW21
            <&gpio0 10 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>, //SW22
            <&gpio1 4  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>, //SW23
            <&gpio1 11 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>, //SW24
            <&gpio0 11 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>, //SW25

            <&gpio1 7  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>, //SW30
            <&gpio1 2  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>, //SW31
     };

};