#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    combos { compatible = "zmk,combos"; };

    macros {
        GamebarScreenshot: GamebarScreenshot {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LG(LA(PRINTSCREEN))>;
            label = "GAMEBARSCREENSHOT";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        FlightSim {
            // -----------------------------------------------------------------------------------------
            // | TAB  |  Q  |  W  |  E  |  R  |
            // | CTRL |  A  |  S  |  D  |  F  |
            // | GUI  |  Z  |  X  |  C  |  V  |
            // | SHFT |  1  |  2  |  3  |  4  |
            // | ALT  |  M  | SPC | ENT | BSPC|

            bindings = <
&kp KP_NUMBER_1  &kp KP_NUMBER_2  &kp KP_NUMBER_3  &mo 1
&kp KP_NUMBER_4  &kp KP_NUMBER_5  &kp KP_NUMBER_6  &GamebarScreenshot
&kp KP_NUMBER_7  &kp KP_NUMBER_8  &kp KP_NUMBER_9  &kp F5
&kp PAGE_UP      &kp UP_ARROW     &kp PAGE_DOWN    &kp F6
&kp LEFT         &kp DOWN         &kp RIGHT        &kp F7
            >;
        };

        raise_layer {
            // -----------------------------------------------------------------------------------------
            // | TAB  |  !  |  @  |  #  |  $  |
            // | CTRL |  %  |  ^  |  &  |  *  |
            // | GUI  |  (  |  )  |  [  |  ]  |
            // | SHFT |  {  |  }  |  \  |  |  |
            // | ALT  |  ~  |  `  |  -  |  =  |

            bindings = <
&bt BT_SEL 0    &bt BT_SEL 1  &bt BT_CLR  &trans
&kp KP_NUMLOCK  &trans        &trans      &kp PRINTSCREEN
&trans          &trans        &trans      &trans
&trans          &trans        &trans      &trans
&trans          &trans        &trans      &kp F12
            >;
        };
    };

    conditional_layers { compatible = "zmk,conditional-layers"; };
};
